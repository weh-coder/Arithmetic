#include<stdio.h>
#include<stdlib.h>
#include<time.h>

//获取随机运算数字 
int get_Number(){
	int ret=rand() % 100;
	return ret;
}
char get_Char(){
	char get_sc[4]={'+','-','*','/'};
	int ret=rand() % 3;
	return get_sc[ret];
}
int getAdd(int a,int b){
	return a+b;
}
int getDef(int a,int b){
	return a-b;
}
int getTimes(int a,int b){
	return a*b;
}
int getDivide(int a,int b){
	if(b!=0){
		return a*1.0/b;
	}
	return 0;
}

//输出运算式 
int Arithmetic(){
	int get_number[3]={0};
	char get_char[2]={0};
	int sum;
	int i;
	srand((unsigned)time(NULL));
	for(i=0;i<3;i++){
		get_number[i]= rand() % 100;
	}
	srand((unsigned)time(NULL));
	for(i=0;i<2;i++){
		get_char[i]= get_Char();
	}
	printf("%d %c %d %c %d=%d\n",get_number[0],get_char[0],get_number[1],get_char[1],get_number[2],sum);
    return 0;
}

int main(){
	int num,i=0;
	for(i=0;i<30;i++){
		Arithmetic();
	}
	return 0;
}
